<Window x:Class="WpfApp_A02.Views.ProductForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_A02.Views"
        mc:Ignorable="d"
        Title="ProductForm" Height="520" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f5f7fa"
        ResizeMode="NoResize">
    <Border CornerRadius="15" Background="White" Padding="20" Margin="10" BorderBrush="#ddd" BorderThickness="1">
        <ScrollViewer>
            <StackPanel >
                <TextBlock Text="Product Form" FontSize="20" FontWeight="Bold" Foreground="#2d3436"/>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Product Name" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtProductName" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Category" FontWeight="SemiBold" Foreground="#636e72"/>
                    <ComboBox x:Name="cmbCategory" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Supplier ID" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtSupplierId" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Quantity Per Unit" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtQuantityPerUnit" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Unit Price" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtUnitPrice" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Units In Stock" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtUnitsInStock" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Units On Order" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtUnitsOnOrder" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Reorder Level" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtReorderLevel" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Discontinued" VerticalAlignment="Center" Margin="0 0 10 0"/>
                    <CheckBox x:Name="chkDiscontinued" />
                </StackPanel>

                

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnSave" Content="Save" Width="80" Background="#00b894" Foreground="White" Click="btnSave_Click"/>
                    <Button x:Name="btnCancel" Content="Cancel" Width="80" Background="#dfe6e9"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
