<Window x:Class="WpfApp_A02.Views.CategoryForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_A02.Views"
        mc:Ignorable="d"
        Title="CategoryForm" Height="450" Width="800"
         WindowStartupLocation="CenterScreen"
        Background="#f5f7fa"
        ResizeMode="NoResize">
    <Border CornerRadius="15" Background="White" Padding="20" Margin="10" BorderBrush="#ddd" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Category Form" FontSize="20" FontWeight="Bold" Foreground="#2d3436" Margin="0 0 0 10" />

            <StackPanel Grid.Row="1" Margin="0 10 0 10" VerticalAlignment="Top">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Category Name" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtCategoryName"
                      Height="30"
                      BorderBrush="#ccc"
                      BorderThickness="1"
                      Padding="5"
                      Text="{Binding CategoryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Description" FontWeight="SemiBold" Foreground="#636e72"/>
                    <TextBox x:Name="txtDescription"
                     Height="60"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     BorderBrush="#ccc"
                     BorderThickness="1"
                     Padding="5"
                      Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Picture" FontWeight="SemiBold" Foreground="#636e72"/>
                    <Button x:Name="btnUploadImage"
                     Content="Upload Image"
                     Width="120"
                     Margin="0 5 0 5"
                     Click="ChooseImage_Click" />
                    <Image x:Name="imgPreview"
                       Height="100"
                       Stretch="UniformToFill"
                       Margin="0 ,5, 90, 5"
                       HorizontalAlignment="Center"
                       Width="100"
                    />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button x:Name="btnSave" Content="Save" Width="80" Background="#0984e3" Foreground="White" Click="btnSave_Click_1" />
                <Button x:Name="btnCancel" Content="Cancel" Width="80" Background="#dfe6e9" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
