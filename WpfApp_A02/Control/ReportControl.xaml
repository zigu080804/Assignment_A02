<UserControl x:Class="WpfApp_A02.Control.ReportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_A02.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#f3f6fc">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Bộ lọc thời gian -->
        <GroupBox Header="Filter by Date" FontWeight="Bold" Padding="10" Margin="0 0 0 10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Start Date:"/>
                    <DatePicker x:Name="dpStartDate" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="End Date:"/>
                    <DatePicker x:Name="dpEndDate" />
                </StackPanel>
                <Button Content="📊 Generate Report" Click="GenerateReport_Click"
                        Background="#4a90e2" Foreground="White" Padding="8,4"
                        FontWeight="Bold" Margin="10 0 0 0" BorderBrush="#357ABD" />
            </StackPanel>
        </GroupBox>

        <!-- DataGrid hiển thị thống kê -->
        <Border Grid.Row="1" CornerRadius="8" Background="White" BorderBrush="#d0d0d0" BorderThickness="1">
            <DataGrid x:Name="dgReport" AutoGenerateColumns="False" IsReadOnly="True"
                      HeadersVisibility="Column" GridLinesVisibility="None"
                      AlternatingRowBackground="#f0f4fa" RowBackground="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="*"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer.CompanyName}" Width="*"/>
                    <DataGridTextColumn Header="Employee" Binding="{Binding Employee.Name}" Width="*"/>
                    <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Total Amount" Width="*"
                                         Binding="{Binding TotalAmount, StringFormat={}{0:C}}"
                                          />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Tổng doanh thu -->
        <TextBlock x:Name="txtTotalRevenue" Grid.Row="2"
                   FontSize="16" FontWeight="Bold" Foreground="#2e7d32"
                   HorizontalAlignment="Right" Margin="0 10 0 0"/>
    </Grid>
</UserControl>
