<UserControl x:Class="WpfApp_A02.UserControl.OrderHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_A02.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <TextBlock Text="📦 Order History" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="OrdersList" Margin="0,30,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10" Background="White" CornerRadius="5">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="Order ID: " />
                                <TextBlock Text="{Binding OrderId}" Margin="0,0,0,5"/>

                                <TextBlock FontWeight="Bold" Text="Order Date: " />
                                <TextBlock Text="{Binding OrderDate}" Margin="0,0,0,5"/>

                                <TextBlock FontWeight="Bold" Text="Order Details:" Margin="0,10,0,5"/>
                                <ItemsControl ItemsSource="{Binding OrderDetails}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="Product: " FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Product.ProductName}" Margin="5,0"/>
                                                <TextBlock Text=" | Quantity: " FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Quantity}" Margin="5,0"/>
                                                <TextBlock Text=" | Unit Price: " FontWeight="Bold"/>
                                                <TextBlock Text="{Binding UnitPrice}" Margin="5,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
