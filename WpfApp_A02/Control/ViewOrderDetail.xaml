<UserControl x:Class="WpfApp_A02.Control.ViewOrderDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_A02.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#f0f2f5" Padding="20" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="📦 Order Management"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0 0 0 20" />
            
            <!-- Orders DataGrid -->
            <DataGrid x:Name="dgOrders"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      RowBackground="White"
                      AlternatingRowBackground="#f9f9f9"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="1"
                      BorderBrush="#ccc"
                      RowDetailsVisibilityMode="VisibleWhenSelected"
                      Margin="0"
                      ItemsSource="{Binding}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="🆔 Order ID" Binding="{Binding OrderId}" Width="Auto" />
                    <DataGridTextColumn Header="👤 Customer ID" Binding="{Binding CustomerId}" Width="Auto" />
                    <DataGridTextColumn Header="🧑‍💼 Employee ID" Binding="{Binding EmployeeId}" Width="Auto" />
                    <DataGridTextColumn Header="🗓 Order Date" Binding="{Binding OrderDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="150" />
                </DataGrid.Columns>

                <!-- Row Details for OrderDetail -->
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#ccc"
                                BorderThickness="1"
                                CornerRadius="6"
                                Background="#ffffff"
                                Margin="10"
                                Padding="10">
                            <StackPanel>
                                <!-- Nút ẩn chi tiết -->
                                <Button Content="❌ Đóng"
                        HorizontalAlignment="Right"
                        Margin="0 0 0 10"
                        Width="70"
                        Click="CloseDetails_Click"/>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          MaxHeight="250">
                                    <DataGrid ItemsSource="{Binding OrderDetails}" 
                                          AutoGenerateColumns="False" 
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          RowBackground="White"
                                          AlternatingRowBackground="#f2f2f2"
                                          GridLinesVisibility="Horizontal"
                                          BorderThickness="0"
                                          Margin="0"
                                          ColumnWidth="*"
                                          FontSize="13">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="📦 Product ID" Binding="{Binding ProductId}" Width="Auto" />
                                            <DataGridTextColumn Header="📝 Product Name" Binding="{Binding Product.ProductName}" Width="Auto" />
                                            <DataGridTextColumn Header="💲 Unit Price" Binding="{Binding UnitPrice, StringFormat=\{0:C\}}" Width="Auto" />
                                            <DataGridTextColumn Header="🔢 Quantity" Binding="{Binding Quantity}" Width="Auto" />
                                            <DataGridTextColumn Header="🎯 Discount (%)" Binding="{Binding Discount, StringFormat=\{0:P0\}}" Width="Auto" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>

            </DataGrid>
        </Grid>
    </Border>


</UserControl>
