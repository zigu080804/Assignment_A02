<UserControl x:Class="WpfApp_A02.Control.UpdatePersonalProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_A02.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Border CornerRadius="15" Background="White" Padding="30" BorderBrush="#D9D9D9" BorderThickness="1" Margin="0,0,0,-41">
            <StackPanel>
                <TextBlock Text="👤 Update Profile"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2E80AD"
                           Margin="0,0,0,20"/>

                <!-- Name -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Name:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtName" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <!-- Username -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Username:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtUsername" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <!-- Password -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Password:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="txtPassword" Grid.Column="1" Margin="10,0,0,0" Height="30"/>
                </Grid>

                <!-- Job Title -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Job Title:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtJobTitle" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <!-- Birth Date -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Birth Date:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpBirthDate" Grid.Column="1" Margin="10,0,0,0" Height="30"/>
                </Grid>

                <!-- Hire Date -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Hire Date:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpHireDate" Grid.Column="1" Margin="10,0,0,0" Height="30"/>
                </Grid>

                <!-- Address -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Address:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtAddress" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <Button Content="💾 Save Changes"
                        Width="160"
                        Height="40"
                        HorizontalAlignment="Left"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
