<UserControl x:Class="WpfApp_A02.Control.UpdateProfileControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_A02.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Border CornerRadius="15" Background="White" Padding="30" BorderBrush="#D9D9D9" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="👤 Update Profile"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2E80AD"
                       Margin="0,0,0,20"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Company Name:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtCompanyName" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Contact Name:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtContactName" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Contact Title:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtContactTitle" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Address:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtAddress" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Phone:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPhone" Grid.Column="1" Margin="10,0,0,0" Height="30" Padding="5"/>
                </Grid>

                <Button Content="💾 Save Changes"
                    Width="160"
                    Height="40"
                    HorizontalAlignment="Left"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="Update_Click"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
