<Window x:Class="WpfApp_A02.Control.CustomerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_A02.Control"
        mc:Ignorable="d"
        Title="Customer Form" Height="300" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Company Name -->
        <TextBlock Text="Company Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtCompanyName" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <!-- Contact Name -->
        <TextBlock Text="Contact Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtContactName" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <!-- Contact Title -->
        <TextBlock Text="Contact Title:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtContactTitle" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <!-- Address -->
        <TextBlock Text="Address:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtAddress" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <!-- Phone -->
        <TextBlock Text="Phone:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtPhone" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click" Height="50"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click" Height="50"/>
        </StackPanel>
    </Grid>
</Window>

