<Window x:Class="WpfApp_A02.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_A02"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <!-- Menu bên trái -->
            <ColumnDefinition Width="*"/>
            <!-- Nội dung hiển thị -->
        </Grid.ColumnDefinitions>

        <!-- Menu bên trái -->
        <StackPanel Grid.Column="0" Background="Transparent" Margin="10,60,0,0">
            <Button x:Name="btnOrderHistory" Content="🧾 Order History"
            Width="150" Height="40" Margin="0,10,0,0"
            Background="#E6FFFA" Foreground="#234E52"
            FontWeight="SemiBold" Cursor="Hand"
            Click="btnOrderHistory_Click"/>

            <Button x:Name="btnUpdateProfile" Content="👤 Update Profile"
            Width="150" Height="40" Margin="0,10,0,0"
            Background="#E6FFFA" Foreground="#234E52"
            FontWeight="SemiBold" Cursor="Hand"
            Click="btnUpdateProfile_Click"/>
        </StackPanel>

        <!-- Nội dung chính bên phải -->
        <ContentControl x:Name="MainContent"
                    Grid.Column="1"
                    Margin="10,60,10,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>

        <!-- TextBlock tiêu đề -->
        <TextBlock Grid.ColumnSpan="2" Text="👋 Welcome back, dear customer!"
           FontSize="20" 
           FontWeight="Bold" 
           Foreground="White" 
           Margin="180,10,0,0"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"/>

        <!-- Nút Out -->
        <Button x:Name="btnOut"
            Width="50" Height="37"
            FontSize="14"
            FontWeight="Bold"
            Foreground="White"
            Background="Red"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,10,0"
            Cursor="Hand"
            BorderBrush="Transparent"
            BorderThickness="0"
            Click="btnOut_Click">
            <Button.Content>Out</Button.Content>
        </Button>

        <!-- Gradient nền -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#47C6C6" Offset="0" />
                <GradientStop Color="#3AB9C3" Offset="0.2" />
                <GradientStop Color="#2DA6BE" Offset="0.4" />
                <GradientStop Color="#2893B7" Offset="0.6" />
                <GradientStop Color="#2E80AD" Offset="0.8" />
                <GradientStop Color="#346DA2" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>
